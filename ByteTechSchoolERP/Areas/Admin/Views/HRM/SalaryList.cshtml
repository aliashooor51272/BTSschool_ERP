@model IEnumerable<ByteTechSchoolERP.Models.ViewModels.SalaryViewModel>

@{
    ViewData["Title"] = "Salary List";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
   
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

    <style>
        /* Custom style to center the DataTable */
        .center-table {
            margin: 0 auto;
            max-width: 80%;
        }
    </style>

 </head>
<body style="background:#f7f7fa;">
    <div class="page-wrapper">
        <div class="col-md-12">

            <div class="style-0" style="max-width: 100%;margin-left: 5px;">
                <strong>Human Resource</strong> |
                <i class="fas fa-home home-icon"></i> - SalaryList
            </div>
        </div>
        <div class="tab-container container-fluid d-md-flex ">


            <div class="col-md-12 mt-4" id="classFormContainers">
                <div class="style-0" id="classFormData" style="max-width:100%; margin:0px;">
            <!-- Add wrapper div with center-table class -->
                    <div class="card">
                        <div class="card-header">
                            <h5>Search Filters</h5>
                        </div>
                        <div class="card-body">
                            <form id="filterForm">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="firstNameFilter">Salary ID</label>
                                            <input type="text" class="form-control" id="firstNameFilter" placeholder="Salary ID" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="firstNameFilter">Employee Name</label>
                                            <input type="text" class="form-control" id="lastNameFilter" placeholder="Employee Name" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="emailFilter">Basic Salary</label>
                                            <input type="text" class="form-control" id="emailFilter" placeholder="Basic Salary" />
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="phoneFilter">Gross Salary</label>
                                            <input type="text" class="form-control" id="phoneFilter" placeholder="Gross Salary" />
                                        </div>
                                    </div>
                              
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="dateRangeFilter">Salary Date</label>
                                            <input type="date" class="form-control" id="dateRangeFilter" placeholder="Salary Date" />
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="sourceFilter"> Deduction Amount</label>
                                            <input type="text" class="form-control" id="sourceFilter" placeholder="Deduction Amount" />
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="dptFilter">Deduction Type</label>
                                            <input type="text" class="form-control" id="dptFilter" placeholder="Deduction Type" />
                                        </div>
                                    </div>
                        

                                </div>

                            </form>
                        </div>
                    </div>
            <table id="salaryTable" class="table table-striped table-bordered">
                        <thead style="background-color: rgb(94, 114, 228); color: white;">
                    <tr>
                        <th>Salary ID</th>
                        <th>Employee Name</th>
                        <th>Basic Salary</th>
                        <th>Gross Salary</th>
                        <th>Deduction Amount</th>
                        <th>Deduction Type</th>
                        <th>Salary Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var salary in Model)
                    {
                        <tr>
                            <td>@salary.SalaryId</td>
                            <td>@salary.EmployeeName</td>
                                    <td>@(salary.BasicSalary.ToString("N0"))</td> <!-- Format Basic Salary with commas -->
                                    <td>@(salary.GrossSalary.ToString("N0"))</td> <!-- Format Gross Salary with commas -->
                                    <td>@(salary.DeductionAmount.ToString("N0"))</td> <!-- Format Deduction Amount with commas -->
                                    <td>@salary.DeductionType</td>
                            <td>@salary.SalaryDate.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
            @section Scripts {
                <script>
                    $(document).ready(function () {
                        var table = $('#salaryTable').DataTable({
                            "paging": true,
                            "lengthChange": false,
                            "searching": true,
                            "ordering": true,
                            "info": true,
                            "autoWidth": false,
                        });

                        // Filter by Salary ID
                        $('#firstNameFilter').on('keyup', function () {
                            table.column(0).search(this.value).draw();
                        });

                        // Filter by Employee Name
                        $('#lastNameFilter').on('keyup', function () {
                            table.column(1).search(this.value).draw();
                        });

                        // Filter by Basic Salary
                        $('#emailFilter').on('keyup', function () {
                            table.column(2).search(this.value).draw();
                        });

                        // Filter by Gross Salary
                        $('#phoneFilter').on('keyup', function () {
                            table.column(3).search(this.value).draw();
                        });

                        // Filter by Salary Date
                        $('#dateRangeFilter').on('change', function () {
                            var selectedDate = this.value;
                            $.fn.dataTable.ext.search.push(
                                function (settings, data, dataIndex) {
                                    var tableDate = data[6]; // Salary Date is in the 7th column (index 6)
                                    if (selectedDate === "") {
                                        return true; // No date selected, don't filter
                                    }
                                    // Format both dates as 'YYYY-MM-DD' for comparison
                                    var formattedTableDate = new Date(tableDate).toISOString().split('T')[0];
                                    return selectedDate === formattedTableDate;
                                }
                            );
                            table.draw();
                            $.fn.dataTable.ext.search.pop(); // Remove the custom search after applying it
                        });

                        // Filter by Deduction Amount
                        $('#sourceFilter').on('keyup', function () {
                            table.column(4).search(this.value).draw();
                        });

                        // Filter by Deduction Type
                        $('#dptFilter').on('keyup', function () {
                            table.column(5).search(this.value).draw();
                        });
                    });
                </script>
            }


</body>
</html>
