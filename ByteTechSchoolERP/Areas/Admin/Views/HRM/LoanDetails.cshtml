<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Page Title</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <!-- DataTables Responsive CSS -->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.3.0/css/responsive.dataTables.min.css">

<!-- DataTables Responsive JS -->
<script src="https://cdn.datatables.net/responsive/2.3.0/js/dataTables.responsive.min.js"></script>

    <style>
        /* Custom style to center the DataTable */
        .center-table {
            margin: 0 auto;
            max-width: 80%;
        }
    </style>

    <script>
        $(document).ready(function () {
            // Initialize DataTable and hide "Loan ID" column (index 0)
          var table =  $('#loansTable').DataTable({
                 "responsive": true,  // Enable responsive mode
        "order": [[5, "desc"]],  // Sorting by 6th column (Due Date) in descending order
        "columnDefs": [
            { "type": "datetime", "targets": [5, 6] },  // Ensure correct sorting for DateTime columns
        ]
    });
            // Filter by First Name
            $('#firstNameFilter').on('keyup', function () {
                table.column(0).search(this.value).draw();
            });
            $('#lastNameFilter').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });

            // Filter by Email
            $('#emailFilter').on('keyup', function () {
                table.column(2).search(this.value).draw();
            });

            // Filter by Phone Number
            $('#phoneFilter').on('keyup', function () {
                table.column(3).search(this.value).draw();
            });

            $('.btn-add-installment').click(function () {
                const userId = $(this).data('user-id');
                const user = $(this).data('user');
                const paidInstallments = $(this).data('paid-installments');
                const amountPerInstallment = $(this).closest('tr').find('td:nth-child(4)').text(); // Adjust index based on your table structure

                // Set user ID
                $('#userId').val(userId);
                $('#amountPerInstallment').val(user);

                // Set Per Installment Amount and Next Installment Number
                const nextInstallmentNumber = paidInstallments + 1; // Increment the paid installments for the next number
                $('#installmentNumber').val(nextInstallmentNumber); // Set the next installment number

                // Show the modal
                $('#addInstallmentModal').modal('show');
            });
                 $('.eye-button').on('click', function () {
                var userId = $(this).data('user-id');
                  window.location.href = '@Url.Action("GetLoansByUser", "HRM", new { area = "Admin" })?userId=' + userId;
         });
           
        });
    </script>
</head>
<body style="background:#f7f7fa;">
    <div class="page-wrapper">
        <div class="col-md-12">

            <div class="style-0" style="max-width: 100%;margin-left: 5px;">
                <strong>Human Resource</strong> |
                <i class="fas fa-home home-icon"></i> - Loan details
            </div>
        </div>
    <div class="tab-container container-fluid d-md-flex ">


        <div class="col-md-12 mt-4" id="classFormContainers">
            <div class="style-0" id="classFormData" style="max-width:100%; margin:0px;">

                
            <!-- Add wrapper div with center-table class -->
           <div class="table-responsive">
                        <div class="card">
                            <div class="card-header">
                                <h5>Search Filters</h5>
                            </div>
                            <div class="card-body">
                                <form id="filterForm">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="firstNameFilter">Employee</label>
                                                <input type="text" class="form-control" id="firstNameFilter" placeholder="Employee" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="firstNameFilter">Loan Amount</label>
                                                <input type="text" class="form-control" id="lastNameFilter" placeholder="Loan Amount" />
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="emailFilter">Number of Installments</label>
                                                <input type="text" class="form-control" id="emailFilter" placeholder="Number of Installments" />
                                            </div>
                                        </div>

                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label for="phoneFilter">Remaining Amount</label>
                                                <input type="text" class="form-control" id="phoneFilter" placeholder="Remaining Amount" />
                                            </div>
                                        </div>
                                    </div>


                                </form>
                            </div>
                        </div>
    <table id="loansTable" class="table table-striped table-bordered nowrap" style="width:100%">
                            <thead style="background-color: rgb(94, 114, 228); color: white;">
            <tr>
                <th>Employee</th>
                <th>Loan Amount</th>
                <th>Number of Installments</th>
                <th>Remaining Amount</th>
                 <th>Action</th>
                <th>Paid Installments</th>
                <th>Remaining Installments</th>
               
            </tr>
        </thead>
        <tbody>
            @foreach (var loan in Model)
            {
                <tr>
                    <td>@loan.Employee?.FirstName</td>
                    <td>@loan.LoanAmount</td>
                    <td>@loan.NumberOfInstallments</td>
                                        <td>@(loan.RemainingAmount.ToString("N0"))</td> <!-- Format with commas -->
                     <td>
                        <button class="btn btn-primary btn-add-installment"
                                data-user-id="@loan.EmployeeId"
                                data-user="@loan.PerInstallmentAmount"
                                data-paid-installments="@loan.PaidInstallments">
                            Add Installment
                        </button>
                         <a href="@Url.Action("ViewEmployeeLoans", "HRM", new { id = loan.EmployeeId })" 
                      class="btn btn-info">
                       <i class="fa fa-eye"></i>
                   </a>
                    </td>
                    <td>@loan.PaidInstallments</td>
                    <td>@loan.RemainingInstallments</td>
                   
                </tr>
            }
        </tbody>
    </table>

                </div>
                </div>
        </div>
    </div>
    <script>
            function viewLoans(userId) {
            // Redirect to the action method with userId as a query parameter
            window.location.href = `/Admin/HRM/GetLoansByUser?userId=${userId}`;
        }
    </script>
  <div class="modal fade" id="addInstallmentModal" tabindex="-1" role="dialog" aria-labelledby="addInstallmentModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addInstallmentModalLabel">Add Installment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="installmentForm" method="post" asp-area="Admin" asp-controller="HRM" asp-action="AddInstallment">
                    <input type="hidden" id="userId" name="UserId" value="123" /> <!-- Set userId here -->
                    <div class="form-group">
                        <label for="amountPerInstallment">Per Installment Amount</label>
                        <input type="text" class="form-control" id="amountPerInstallment" name="PerInstallmentAmount" readonly />
                    </div>
                    <div class="form-group">
                        <label for="installmentNumber">Next Installment Number</label>
                        <input type="text" class="form-control" id="installmentNumber" name="InstallmentNumber" readonly />
                    </div>
                    <div class="form-group">
                        <label for="dueDate">Due Date</label>
                        <input type="date" class="form-control" id="dueDate" name="DueDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="saveInstallmentButton">Amount Received</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
 

</body>
</html>
